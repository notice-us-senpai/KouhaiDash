<div class="row">
  <h1><%=@category.name%></h1>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="panel-group">
      <% @tasks.each do |task| %>
         <div class="panel panel-default">
           <div class="panel-heading">
             <h4 class="panel-title">
               <a data-toggle="collapse" href="#collapse<%=task.id%>"><%=task.name%></a>
             </h4>
           </div>
           <div id="collapse<%=task.id%>" class="panel-collapse collapse">
             <table class="table">
               <tbody>
                 <tr>
                   <th>Deadline</th>
                   <td><%= task.deadline %></td>
                 </tr>
                 <tr>
                   <th>Done</th>
                   <td>
                     <% if task.done %>
                      <%= "Yes!" %>
                    <% else %>
                      <%= "Not yet!" %>
                    <% end %>
                  </td>
                 </tr>
                 <tr>
                   <th>Description</th>
                   <td><%= task.description %></td>
                 </tr>
                 <%first=true%>
                 <%task.task_assignments.each do |assign| %>
                   <tr>
                     <th>
                       <%if first%>
                        Assigned To
                        <%first=false%>
                       <%end%>
                     </th>
                     <td><%= assign.membership.user.username %></td>
                   </tr>
               <%end %>
             </tbody>
            </table>
          <div class="panel-body">
              <%= link_to 'See More', [@group,@category,task], class:"btn btn-default"%>
              <%= link_to 'Edit', edit_group_category_task_path(@group,@category,task), class:"btn btn-default" %>
              <%= link_to 'Delete', [@group,@category,task], method: :delete,
                data: { confirm: 'Are you sure?' } , class:"btn btn-default"%>
          </div>
         </div>
       </div>
       <% end %>
    </div>
    <%= link_to 'New Task', new_group_category_task_path(@group,@category), class:"btn btn-default" %>
  </div>
</div>
