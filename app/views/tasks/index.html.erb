
<h1>Listing Tasks</h1>


<% @tasks.each do |task| %>
  <h3>Name</h3>
  <%= task.name %>

  <h3>Deadline</h3>
  <%= task.deadline %>

  <h3>Done</h3>
  <% if task.done %>
    <%= "Yes!" %>
  <% else %>
    <%= "Not yet!" %>
  <% end %>

  <h3>Actions</h3>
  <p>
    <%= link_to 'See More', [@group,@category,task] %> |
    <%= link_to 'Edit', edit_group_category_task_path(@group,@category,task) %> |
    <%= link_to 'Delete', [@group,@category,task], method: :delete,

      data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<p><%= link_to 'New Task', new_group_category_task_path(@group,@category) %></p>
