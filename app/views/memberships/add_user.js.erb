<%if @success%>
  Materialize.toast('<%=@user.username%> was successfully added as a new member.');
  document.getElementById("memberships_users_div").innerHTML = "<%= escape_javascript(render 'users') %>";
  document.getElementById("memberships_div").innerHTML = "<%= escape_javascript(render 'list') %>";
  $('.memberships-search').val("");
  var $grid=$('.grid').isotope({
    itemSelector: '.grid-item',
    percentPosition: true
  });
  $grid.imagesLoaded().progress( function() {
    $grid.isotope('layout');
  });

<%else%>
  <% @membership.errors.full_messages.each do |msg| %>
    Materialize.toast('<%=msg%>');
  <% end %>
<%end%>
