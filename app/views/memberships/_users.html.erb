<div class='grid'>
  <% @users.each do |user|%>
    <div class="grid-item col s6 m3" id='user_<%=user.id%>'>
      <div class="card horizontal">
        <div class="card-image">
          <%= image_tag "default#{user.id%4}.jpg"%>
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <strong><%= user.username %></strong>
            <p><%=user.description%></p>
          </div>
          <div class="card-action">
            <%= link_to "<i class='material-icons'>info</i>".html_safe, user,
             data: {position:"bottom", delay:"50",tooltip:"View User"}, class:'tooltipped' %>
            <%= link_to "<i class='material-icons'>add</i>".html_safe, group_memberships_add_path(@group,user.id),
             remote: true, method: :post, data: {position:"bottom", delay:"50",tooltip:"Add to Group"}, class:'tooltipped'%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
