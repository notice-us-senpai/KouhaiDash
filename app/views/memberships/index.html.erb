<% provide(:title, "#{@group.name} Members") %>

<div class="row">
  <div class="col s12">
    <h1><%=@group.name+' Members'%></h1>
  </div>
</div>
<% if @authorised_member%>
  <div class="row">
    <%=form_for(:search, url: group_memberships_search_path(@group),remote: true,  html: {id: "memberships_search_form" }) do |f|%>
      <div class='input-field col s12'>
        <%=f.text_field :input, class:'memberships-search' %>
        <%=f.label :input, "Search"%>
      </div>
    <%end%>
  </div>
  <div class='row' id='memberships_users_div'>
    <%=render 'users' %>
  </div>
<%end%>
<div class="row">
  <div class="col s12">
    <div class="col s12">
      <h2>Members:</h2>
    </div>
    <div class="col s12 m9">
      <table>
        <%=render @memberships%>
      </table>
    </div>
</div>
</div>
