<% provide(:title, "#{@group.name} Members") %>

<div class="row">
  <div class="col s12">
    <h1><%=@group.name+' Members'%></h1>
  </div>
</div>
<% if @authorised_member%>
  <div class="row">
    <div class="col s12 m9">
      <%=render 'form' %>
    </div>
  </div>
<%end%>
<div class="row">
  <div class="col s12">
    <div class="col s12">
      <h2>Members:</h2>
    </div>
    <div class="col s12 m9">
      <table>
        <%=render @memberships%>
      </table>
    </div>
</div>
</div>
