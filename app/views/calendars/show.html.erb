<% provide(:title, "#{@calendar.name.length>0? @calendar.name : @category.name}") %>
<div class="row">
  <h1><%=@calendar.name.length>0? @calendar.name : @category.name%></h1>
</div>

<% if @authorised_member%>
  <div class="row">
    <div class = "col s12">
      <%= link_to '<i class="material-icons">settings</i>'.html_safe,edit_group_category_calendar_path(@group,@category),
        class: "btn waves-effect waves-light tooltipped", data:{position:"bottom", delay:"50",tooltip:"Settings"}  %>
    </div>
  </div>
<%end%>
<div class='row'>
  <div class='col s12'>
    <%=form_for(:period, url: group_category_calendar_period_path(@group, @category),remote: true,  html: {id: "calendar_period_form" }) do |f|%>
      <div class='input-field col s6 m4'>
        <%=select_month(Date.today,{ field_name: 'month', prefix:'period'}, {class: 'calendar-period'}) %>
        <%=f.label :month, 'Month'%>
      </div>
      <div class='input-field col s6 m4'>
        <%=select_year(Date.today, {field_name: 'year', prefix:'period'}, {class: 'calendar-period'})%>
        <%=f.label :year, 'Year'%>
      </div>
    <%end%>
  </div>
  <div class='col s12'>
    <table class='bordered calendar-table' id='calendar_table'>
      <%=render 'table'%>
    </table>
  </div>
</div>
<div id='calendar-modals'>
  <%=render 'modals'%>
</div>
