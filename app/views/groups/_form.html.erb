<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div class="col s12">
      <div class="alert">
        <p>The form contains <%= pluralize(@group.errors.count, "error") %>.</p>
      </div>
      <ul class='alert'>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field col s12">
    <%= f.text_field :name%>
    <%= f.label :name %>
  </div>
  <div class="input-field col s12">
    <%= f.text_field :string_id%>
    <%= f.label :string_id, 'Group ID' %>
  </div>
  <div class="input-field col s12">
    <%= f.text_area :description, class: 'materialize-textarea'%>
    <%= f.label :description %>
  </div>
  <div class="input-field col s12">
    <%= f.check_box :members_public%>
    <%= f.label :members_public, "Set member list to be public"%>
  </div>
  <div class="actions col s12">
    <p><br><button class="btn-large waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button></p>
  </div>
<% end %>
