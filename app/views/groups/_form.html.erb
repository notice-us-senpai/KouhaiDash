<div class="row">
  <div class="col-md-6">
    <%= form_for(@group) do |f| %>
      <% if @group.errors.any? %>
        <div class="panel panel-danger">
          <div class="panel-heading"><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</div>
          <ul class="list-group">
           <% @group.errors.full_messages.each do |message| %>
             <li class="list-group-item"><%= message %></li>
           <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="field">
        <label>Set members list to be public:</label><br>
        <%= f.check_box :members_public, class: 'form-control'%>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
