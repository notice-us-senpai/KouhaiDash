<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%=@group.name%></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%if @group.members_public%>
    <p> Members list is public. <p>
    <%else%>
    <p> Members list is not public. <p>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="btn-group btn-group-justified">
    <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-default"%>
    <%= link_to 'Back', groups_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
