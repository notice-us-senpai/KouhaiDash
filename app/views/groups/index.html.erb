
<h1>Listing Groups</h1>

<ul>
  <% @groups.each do |group| %>
    <li>
      <%=link_to "#{group.name}", group %>
      <%if logged_in? && !is_user_of_group?(group)%>
        <%if is_a_not_yet_approved_member_of_group?(group)%>
          <label>Request is sent.</label>
        <%else%>
          <%=link_to "Request to Join", join_group_path(group.id), method: :post%>
        <%end%>
      <%end%>
      <% unless !logged_in?||is_user_of_group?(group) %>

      <% end %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Group', new_group_path %>
