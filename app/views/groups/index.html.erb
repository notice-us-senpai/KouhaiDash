<div class="row">
  <h1>Groups</h1>
</div>
<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%=link_to "#{group.name}", group%></td>
            <td>
              <%if logged_in? && !is_user_of_group?(group)%>
                <%if is_a_not_yet_approved_member_of_group?(group)%>
                  Request sent
                <%else%>
                  <%=link_to "Request to Join", join_group_path(group.id), method: :post, class: "btn btn-default"%>
                <%end%>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Group', new_group_path , class: "btn btn-default"%>
  </div>
</div>
