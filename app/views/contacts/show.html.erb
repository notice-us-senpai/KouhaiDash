<% provide(:title, @contact.name) %>
<div class="row">
  <div class="col s12">
	 <h1><%= @contact.name %></h1>
 </div>
</div>

<div class="row">
	<div class="col s12 m9">
    <div class="card">
      <div class="card-content contact-card">
        <span class="card-title"><%= @contact.name %></span>
        <p>
          <ul class="contact-details">
      				<li><%= @contact.organisation %></li>
      				<li><%= @contact.position %></li>

      				<li><a href='mailto:<%= @contact.email%>'><%= @contact.email %></a></li>
      				<li><%= @contact.phone %></li>

      				<li><a href='http://<%= @contact.website%>'><%= @contact.website %></a></li>
      				<li><%= @contact.description %></li>
            </ul>
            </p>
      </div>
      <% if @authorised_member%>
        <div class="card-action white">
          <%= link_to "<i class='material-icons'>mode_edit</i>".html_safe, { action: "edit", id: @contact } %>
          <%= link_to "<i class='material-icons'>delete</i>".html_safe, { action: "destroy", id: @contact },
            method: :delete, data: { confirm: "Delete #{@contact.name}?" } %>
        </div>
      <%end%>
    </div>
	</div>
</div>

<div class="row">
  <div class ='col s12'>
    <%= link_to '<i class="material-icons">list</i>'.html_safe, { action: "index" }, class: "btn waves-effect waves-light"%>
    <% if @authorised_member%>
      <%= link_to '<i class="material-icons left">add</i> New Contact'.html_safe, {action: 'new'}, class: "btn waves-effect waves-light red" %>
    <%end%>
  </div>
</div>
