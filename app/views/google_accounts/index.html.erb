<p id="notice"><%= notice %></p>

<h1>Listing Google Accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Access token</th>
      <th>Refresh token</th>
      <th>Expires at</th>
      <th>Gmail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @google_accounts.each do |google_account| %>
      <tr>
        <td><%= google_account.user_id %></td>
        <td><%= google_account.access_token %></td>
        <td><%= google_account.refresh_token %></td>
        <td><%= google_account.expires_at %></td>
        <td><%= google_account.gmail %></td>
        <td><%= link_to 'Show', google_account %></td>
        <td><%= link_to 'Edit', edit_google_account_path(google_account) %></td>
        <td><%= link_to 'Destroy', google_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

